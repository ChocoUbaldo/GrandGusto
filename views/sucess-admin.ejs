<%-include('partials/sweetalert2.ejs')%>
<style>
    body{
    background: rgb(247,214,151);
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    }
    .swal2-popup.custom-swal-bg {
                background-color: rgba(255,234,193,1); /* Cambia este color al que desees */
                border-color: #5d5d5d; /* Cambia este color al que desees para el borde */
                color: #5b5b5b; /* Cambia este color al que desees para el texto */
        }
        a{
            color: rgb(237, 110, 110);
        }
</style>
<body>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Muestra la alerta utilizando SweetAlert
            Swal.fire({
                icon: 'success',
                title: 'Redirigiendo al administrador',
                showConfirmButton: false,
                timer: 3000,
                customClass: {
                    popup: 'custom-swal-bg' // Aplica la clase personalizada para el fondo de la alerta
                },
                confirmButtonColor: '#905835',
                didOpen: () => {
                Swal.showLoading();
                const timer = Swal.getPopup().querySelector("b");
                     timerInterval = setInterval(() => {
                     timer.textContent = `${Swal.getTimerLeft()}`;
            }, 100);
            },
        willClose: () => {
            clearInterval(timerInterval);
        }
        }).then((result) => {
        /* Read more about handling dismissals below */
        if (result.dismiss === Swal.DismissReason.timer) {
            console.log("I was closed by the timer");
        } // La alerta se cerrará automáticamente después de 2 segundos
        }).then(() => {
            window.location.href = '/administracion';
        });
        });
    </script>
</body>
</html>
